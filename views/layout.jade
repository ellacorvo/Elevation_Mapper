doctype html
html(lang='en')
	head
		meta(charset="utf-8")
		title Elevation Mapper
		link(rel="stylesheet" href="http://js.arcgis.com/3.14/dijit/themes/claro/claro.css")
		link(rel="stylesheet" href="http://js.arcgis.com/3.14/esri/css/esri.css")
		link(rel="stylesheet" href="main.css")
		script
			var dojoConfig = { parseOnLoad: true };

	body
	.claro
		#info
			label Digitize a route:
			button#Polyline(type='button') Polyline
			button#FreehandPolyline(type='button') Freehand Polyline
			hr
			label Select unit measure:
			select#unitsSelect
				option(value='esriMiles') Miles
				option(value='esriKilometers') Kilometers
				option(value='esriMeters') Meters
				option(value='esriNauticalMiles') Nautical Miles
				option(value='esriYards') Yards
				option(value='esriFeet') Feet
			hr
			button#saveRoute(type='button') Save Route
			button#viewRoutes(type='button') View Routes
		#mainContainer(data-dojo-type='dijit/layout/BorderContainer', data-dojo-props="design:'headline', gutters:true", style='width:100%;height:100%;')
			#map(data-dojo-type='dijit/layout/ContentPane', data-dojo-props="region:'center'", style='height:100%;')
			div(data-dojo-type='dijit/layout/ContentPane', data-dojo-props="region:'bottom'", style='background-color: #235F68;')
				#profileChartNode

	script(src="http://js.arcgis.com/3.14compact/")
	script(src="main.js")
